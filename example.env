# Polymarket Spike Bot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# WALLET CONFIGURATION (REQUIRED)
# ===========================================
# Your wallet private key (keep this secret!)
PK=

# Your Polymarket proxy wallet address
YOUR_PROXY_WALLET=

# Your MetaMask/trading wallet address
BOT_TRADER_ADDRESS=

# USDC contract address on Polygon (do not change)
USDC_CONTRACT_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# Polymarket settlement contract (do not change)
POLYMARKET_SETTLEMENT_CONTRACT=0x56C79347e95530c01A2FC76E732f9566dA16E113

# ===========================================
# TRADING PARAMETERS
# ===========================================
# Trade size in USDC
trade_unit=3

# Maximum slippage tolerance (0.06 = 6%)
slippage_tolerance=0.06

# Spike detection threshold (0.01 = 1%)
spike_threshold=0.01

# ===========================================
# PROFIT/LOSS SETTINGS
# ===========================================
# Take profit at percentage gain (0.03 = 3%)
pct_profit=0.03

# Stop loss at percentage loss (-0.025 = -2.5%)
pct_loss=-0.025

# Take profit at absolute USDC gain
cash_profit=3

# Stop loss at absolute USDC loss
cash_loss=-3

# ===========================================
# POSITION MANAGEMENT
# ===========================================
# Maximum time to hold a position (seconds)
holding_time_limit=60

# Cooldown after closing a position (seconds)
sold_position_time=1800

# Cooldown between trades on same asset (seconds)
cooldown_period=120

# Number of price points to keep in history
price_history_size=120

# Minimum shares to keep when selling
keep_min_shares=1

# Maximum number of concurrent trades
max_concurrent_trades=3

# Minimum liquidity required to trade (USDC)
min_liquidity_requirement=10